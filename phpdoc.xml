<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title><![CDATA[MyPackage API]]></title>
    <parser>
        <target>build/api</target>
        <sourcecode />
        <progressbar />
    </parser>
    <transformer>
        <target>build/api</target>
    </transformer>
    <files>
        <directory>src</directory>
    </files>
    <logging>
        <paths>
            <default>build/phpdoc/phpdoc-{DATE}.log</default>
            <errors>build/phpdoc/phpdoc-{DATE}.errors.log</errors>
        </paths>
    </logging>
</phpdoc>